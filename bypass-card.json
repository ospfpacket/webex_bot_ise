{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Add MAC to Guest Bypass Group",
            "wrap": true,
            "weight": "Bolder",
            "fontType": "Default",
            "size": "Large",
            "color": "Dark"
        },
        {
            "type": "TextBlock",
            "text": "Enter MAC Address:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Action.Submit",
                    "style": "positive",
                    "data": {
                        "callback_keyword": "bypass"
                    }
                }
            ]
        }
    ]
}